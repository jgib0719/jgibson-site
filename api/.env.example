# CCNA Quiz API Environment Configuration
# Copy this file to .env and update values for your environment

# Server Configuration
NODE_ENV=production
PORT=3000
TRUST_PROXY=true

# Database Configuration
DB_PATH=./data/progress.db
DB_POOL_MIN=0
DB_POOL_MAX=5
DB_POOL_IDLE=10000

# Security Configuration
ALLOWED_ORIGINS=https://jgibson.site,http://jgibson.site
SESSION_SECRET=change-this-to-a-secure-random-string
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/api.log

# API Configuration
API_VERSION=v1
MAX_QUESTION_LIMIT=1000
DEFAULT_QUESTION_LIMIT=50